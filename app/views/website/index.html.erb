<% if logged_in? %>
	<div id="small-panel" class="panel">
		Hello <%= current_user.login %>!
		<ul>
			<li id="control-panel"><%= link_to "Control Panel", { :controller => "website", :action => "panel" }%></li>
			<li id="logout"><%= link_to "Logout", { :controller => "sessions", :action => "logout"}%></li>
		</ul>
	</div>
<% else %>
	<div id="big-panel">
		<div id="login">
			<%= render :partial => "sessions/login"%>
		</div>
		<div id="signup">
			<%= render :partial => "sessions/signup" %>
		</div>
	</div>
<% end %>



